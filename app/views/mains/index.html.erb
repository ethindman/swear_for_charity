<h1 class="mediumHeadline">My Swear Jar</h1>
<div class="text-center">
	<% if @current_mission %>
		<a href="/missions/<%= @current_mission.id %>/edit">
			<button class="btn btn-success btn-lg">Add to Swear Jar</button>
		</a>
	<% end %>
</div>
<% if @current_mission %>
<div class="link"><a href="/missions/<%= @current_mission.id %>" class="hvr-grow-rotate hvr-reveal">
	<h3>Current Balance: $<%= @current_mission.current_balance %></h3></a>
</div>
<% end %>

<div class="activity">
	<h2 class="mediumHeadline">What's the scoop?</h2>
	<% @updates.each do |update| %>
			<p class="friend"><%= update.user.first_name %> added $<%= update.amount %> to the swear jar</p>	
	<% end %>
	</div>
